{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautica | Cotizaciones Marina Humeda
{% endblock %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">Marina Humeda Cotizaciones</h3>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fecha llegada</th>
                        <th>Fecha salida</th>
                        <th>Dias estadia</th>
                        <th>Dias adicionales</th>
                        <th>Precio por dia</th>
                        <th>Descuento</th>
                        <th>Gasolina (Lt)</th>
                        <th>Agua</th>
                        <th>Conexion electricidad</th>
                        <th>Dezasolve</th>
                        <th>Limpieza de locaci√≥n</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for marinaHumedaCotizacion in marinaHumedaCotizacions %}
                        <tr>
                            <td><a href="{{ path('marina-humeda_show', { 'id': marinaHumedaCotizacion.id }) }}">{{ marinaHumedaCotizacion.id }}</a></td>
                            <td>{% if marinaHumedaCotizacion.fechaLlegada %}{{ marinaHumedaCotizacion.fechaLlegada|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if marinaHumedaCotizacion.fechaSalida %}{{ marinaHumedaCotizacion.fechaSalida|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ marinaHumedaCotizacion.diasEstadia }}</td>
                            <td>{{ marinaHumedaCotizacion.diasAdicionales }}</td>
                            <td>{{ marinaHumedaCotizacion.precioDia }}</td>
                            <td>{{ marinaHumedaCotizacion.descuento }}</td>
                            <td>{{ marinaHumedaCotizacion.gasolina }}</td>
                            <td>{{ marinaHumedaCotizacion.agua }}</td>
                            <td>{{ marinaHumedaCotizacion.electricidad }}</td>
                            <td>{{ marinaHumedaCotizacion.dezasolve }}</td>
                            <td>{{ marinaHumedaCotizacion.limpieza }}</td>
                            <td>
                                <a class="btn btn-morado-claro" href="{{ path('marina-humeda_show', { 'id': marinaHumedaCotizacion.id }) }}">Detalle</a>
                                <a class="btn btn-azul" href="{{ path('marina-humeda_edit', { 'id': marinaHumedaCotizacion.id }) }}">Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
{% endblock %}
